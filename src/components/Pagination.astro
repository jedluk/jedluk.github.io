---
import PaginationItem from './PaginationItem.astro'
interface Props {
  prev?: string
  next?: string
  current: number
  last: number
}

const { prev, next, current, last } = Astro.props
---

<nav aria-label="Page navigation example">
  <ul class="flex items-center -space-x-px h-8 text-sm">
    <li>
      <a
        href={prev}
        data-allowed={`${!!prev}`}
        class={[
          'flex items-center justify-center px-3 h-8 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg',
          'cursor-not-allowed allowed:cursor-pointer opacity-50 allowed:opacity-100',
          'hover:bg-gray-100 hover:text-gray-700',
          'dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white'
        ].join(' ')}
      >
        <span class="sr-only">Previous</span>
        <svg
          class="w-2.5 h-2.5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 1 1 5l4 4"></path>
        </svg>
      </a>
    </li>
    {
      Array.from(new Array(last), (_, i) => i + 1).map((page) => (
        <PaginationItem
          page={page}
          link={`/blog/${page}`}
          selected={page === current}
        />
      ))
    }
    <li>
      <a
        href={next}
        data-allowed={`${!!next}`}
        class={[
          'flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg',
          'cursor-not-allowed allowed:cursor-pointer opacity-50 allowed:opacity-100',
          'hover:bg-gray-100 hover:text-gray-700',
          'dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white'
        ].join(' ')}
      >
        <span class="sr-only">Next</span>
        <svg
          class="w-2.5 h-2.5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 6 10"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="m1 9 4-4-4-4"></path>
        </svg>
      </a>
    </li>
  </ul>
</nav>

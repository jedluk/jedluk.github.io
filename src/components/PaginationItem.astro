---
interface Props {
  page: number
  link: string
  selected: boolean
}

const { page, link, selected } = Astro.props
---

<li>
  <a
    href={link}
    data-selected={`${selected}`}
    class={[
      'flex items-center justify-center px-3 h-8 leading-tight text-gray-500 dark:text-white bg-white border border-gray-300',
      'hover:bg-gray-100 hover:text-gray-700',
      'dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white',
      'dark:selected:bg-brand selected:bg-brand selected:opacity-80 selected:text-white selected:shadow-md selected:shadow-violet-400/50 selected:border-none'
    ].join(' ')}
  >
    {page}
  </a>
</li>
